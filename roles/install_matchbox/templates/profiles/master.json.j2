{
    "id": "master",
    "name": "OCP Master Node",
    "ignition_id": "master.ign",
    "boot": {
        "kernel": "/assets/{{ kernel }}",
        "initrd": [
            "/assets/{{ initramfs }}"
        ],
        "args": [
            "ip=dhcp",
            "rd.neednet=1",
            "console=tty0",
            "console=ttyS0",
            "coreos.inst=yes",
            "coreos.inst.install_dev=vda",
            "coreos.inst.image_url=http://{{ cluster.nodes['bastion'].name }}.{{ cluster.name }}.{{ cluster.fqdn }}:8080/assets/{{ bios }}",
            "coreos.inst.ignition_url=http://{{ cluster.nodes['bastion'].name }}.{{ cluster.name }}.{{ cluster.fqdn }}:8080/ignition?mac=${mac:hexhyp}"
        ]
    }
}