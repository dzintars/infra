" load vim-plug
if empty(glob("~/.config/nvim/autoload/plug.vim"))
	execute '!curl -fLo ~/.config/nvim/autoload/plug.vim https://raw.github.com/junegunn/vim-plug/master/plug.vim'
endif

call plug#begin(stdpath('data') . '/plugged')

" Theme
" Plug 'morhetz/gruvbox'
" Plug 'gruvbox-community/gruvbox' " Community fork of the original Gruvbox theme
Plug 'chriskempson/base16-vim'

" Bling
Plug 'Yggdroot/indentLine'
Plug 'airblade/vim-gitgutter'
Plug 'airblade/vim-rooter'
Plug 'tpope/vim-fugitive' " Git

Plug 'editorconfig/editorconfig-vim' " Use .editorconfig if provided
Plug 'tpope/vim-commentary' " gcc Comments
" Plug 'jiangmiao/auto-pairs' " Insert quotes, brackets, etc in pairs (not the best DX)
Plug 'alvan/vim-closetag'
Plug 'tpope/vim-surround' " Change surroundings in pairs
Plug 'junegunn/vim-peekaboo'  " Preview the registers

" JavaScript
Plug 'pangloss/vim-javascript'
"Tagged template litterals https://github.com/jonsmithers/vim-html-template-literals
Plug 'jonsmithers/vim-html-template-literals', {'branch': 'dev'}
Plug 'elzr/vim-json'

" TypeScript
Plug 'HerringtonDarkholme/yats.vim' " TS Syntax
" Plug 'leafgarland/typescript-vim' " TS Syntax

" Golang
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
Plug 'tweekmonster/gofmt.vim' " Auto gofmt

" Protobufs
Plug 'bufbuild/vim-buf'

" Ansible
Plug 'pearofducks/ansible-vim'

" Bazel
Plug 'google/vim-maktaba'
Plug 'bazelbuild/vim-bazel'

" Other
Plug 'dense-analysis/ale'
Plug 'tpope/vim-markdown'
Plug 'ap/vim-css-color' "Display a preview of colors with css
Plug 'vimwiki/vimwiki'
Plug 'lepture/vim-jinja'

Plug 'autozimu/LanguageClient-neovim', {
  \ 'branch': 'next',
  \ 'do': 'bash install.sh',
  \ }

" Plugins that are neater in their own file
for f in split(glob('~/.config/nvim/plugins.d/*.vim'), '\n')
    exe 'source' f
endfor

call plug#end()
