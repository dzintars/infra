<domain>  
  <volume>
    <name>{{ node.name }}.{{ cluster.name }}.{{ cluster.fqdn }}.{{ node.disk.format }}</name>
    <allocation>0</allocation>
    <capacity unit="G">10</capacity>
    <target>
      <path>{{ storage_pool_dir }}/{{ cluster.name }}/{{ node.name }}.{{ cluster.name }}.{{ cluster.fqdn }}.{{ node.disk.format }}</path>
      <format type='{{ node.disk.format }}'/>
      <permissions>
        <owner>107</owner>
        <group>107</group>
        <mode>0744</mode>
        <label>virt_image_t</label>
      </permissions>
    </target>
  </volume>
</domain>