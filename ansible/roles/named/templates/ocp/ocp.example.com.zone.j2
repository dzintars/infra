$TTL 900

@           IN  SOA bastion.{{ cluster_name }}.{{ fqdn }}.    hostmaster.{{ cluster_name }}.{{ fqdn }}. (
            2019062002      ; serial
            3H              ; refresh (3 hours)
            30M             ; retry (30 minutes)
            1W              ; expiry (1 week)
            3H )            ; minimum (3 hours)

            IN  NS  bastion.{{ cluster_name }}.{{ fqdn }}.
bastion     IN  A   {{ network }}.254
bootstrap-0 IN  A   {{ network }}.253
master-0    IN  A   {{ network }}.10
master-1    IN  A   {{ network }}.11
master-2    IN  A   {{ network }}.12
infnod-0    IN  A   {{ network }}.20
infnod-1    IN  A   {{ network }}.21
cptnod-0    IN  A   {{ network }}.30
cptnod-1    IN  A   {{ network }}.31
cptnod-2    IN  A   {{ network }}.32
api         IN  A   {{ network }}.254
api-int     IN  A   {{ network }}.254
apps        IN  A   {{ network }}.254
*.apps      IN  A   {{ network }}.254
etcd-0      IN  A   {{ network }}.10
etcd-1      IN  A   {{ network }}.11
etcd-2      IN  A   {{ network }}.12
_etcd-server-ssl._tcp   IN  SRV 0   10  2380    etcd-0.{{ cluster_name }}.{{ fqdn }}.
                        IN  SRV 0   10  2380    etcd-1.{{ cluster_name }}.{{ fqdn }}.
                        IN  SRV 0   10  2380    etcd-2.{{ cluster_name }}.{{ fqdn }}.
;EOF
